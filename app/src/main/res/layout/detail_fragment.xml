<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="detail_fragment"
    android:id="@+id/detailed_fragment"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World "
        android:id="@+id/detail_text"
        android:fontFamily="sans-serif-medium"
        android:textSize="36dp"
         android:background="#66CCCC"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/release_date"
             android:text="15/10/2016"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/poster_image"
            android:layout_toEndOf="@+id/poster_image"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="55dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poster_image"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/average_rate"
            android:text="Average rating :"
            android:textColor="#000000"
            android:layout_below="@+id/release_date"
            android:layout_alignLeft="@+id/release_date"
            android:layout_alignStart="@+id/release_date"
            android:layout_marginTop="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/overview"
            android:text="jvndskvlnklvsnvkldsnvksvndsklvnkdslvn /"
            android:textColor="#000000"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_below="@+id/poster_image"
            android:layout_alignLeft="@+id/poster_image"
            android:layout_alignStart="@+id/poster_image" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorite_icon"
            android:background="@drawable/favorite_before"
            android:clickable="true"
            android:layout_alignTop="@+id/release_date"
            android:layout_alignRight="@+id/overview"
            android:layout_alignEnd="@+id/overview"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp" />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#152060"
        android:text="Review"
        android:textSize="36dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/review"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#152060"
        android:text="Trailer"
        android:textSize="36dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ListView_Trailer"
        android:layout_margin="10dp"
        />


</LinearLayout>
</ScrollView>